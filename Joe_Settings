# needs 2 params joe_skeleton(project_name, branch_name, remote_repository destination)
joe_skeleton()
{
   git clone https://github.com/Joe11000/Project_Skeleton-User-Auth---Layout- $1
   cd $1
   git remote set-url origin $3
   git checkout -b $2
   git commit -m "Project Setup Initial Commit"
   git remote rm

}

# install sass gem if doesn't exist
gem query --remote | grep -Eqi
if [ $? -eq 0 ]; then
  gem install sass &
fi


